<resources>
        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/black</item>
            <item name="colorPrimaryDark">@color/black</item>
            <item name="colorAccent">@color/black</item>

            <item name="android:windowActionBar">false</item>
            <item name="android:windowNoTitle">true</item>
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
        </style>

        <style name="search_view">
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textColorHint">@color/white</item>
            <item name="android:background">@drawable/selector_search_view</item>
            <item name="android:paddingTop">6dp</item>
            <item name="android:paddingBottom">6dp</item>
            <item name="android:paddingLeft">4dp</item>
            <item name="android:paddingRight">4dp</item>
            <item name="android:singleLine">true</item>
        </style>

        <style name="line">
            <item name="android:background">@color/bg_color</item>
        </style>
        <style name="line_vertical" parent="line">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">1dp</item>
        </style>
        <style name="line_horizontal" parent="line">
            <item name="android:layout_width">1dp</item>
            <item name="android:layout_height">match_parent</item>
        </style>

        <style name="bigButton">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:gravity">center</item>
            <item name="android:minHeight">10dip</item>
            <item name="android:paddingLeft">10dip</item>
            <item name="android:paddingRight">10dip</item>
            <item name="android:textSize">10sp</item>
            <item name="android:textColor">@color/black</item>
        </style>

        <style name="bigRedButton" parent="bigButton">
            <item name="android:background">@drawable/bg_btn_style_red</item>
        </style>

        <style name="bigGreenButton" parent="@style/bigButton">
            <item name="android:background">@drawable/bg_btn_style_green</item>
        </style>

        <style name="smallButton">
            <item name="android:textSize">10sp</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:gravity">center</item>
            <item name="android:paddingLeft">10dp</item>
            <item name="android:paddingRight">10dp</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:minWidth">10dp</item>
            <item name="android:minHeight">10dp</item>
        </style>

        <style name="smallGreenButton" parent="@style/smallButton">
            <item name="android:background">@drawable/bg_btn_style_green</item>
        </style>

        <style name="smallGreyButton" parent="@style/smallButton">
            <item name="android:textColor">@color/blue</item>
            <item name="android:background">@drawable/bg_btn_style_grey</item>
        </style>

        <style name="smallRedButton" parent="@style/smallButton">
            <item name="android:background">@drawable/bg_btn_style_red</item>
        </style>

        <style name="customCheckbox"
            parent="@android:style/Widget.CompoundButton.CheckBox">
            <item name="android:button">@drawable/selector_checkbox</item>
        </style>



        <style name="editText_base">
            <item name="android:textSize">16sp</item>
            <item name="android:padding">8dp</item>
            <item name="android:minHeight">10dip</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textColorHint">@color/border_color</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:background">@null</item>
        </style>

        <style name="radioButton">
            <item name="android:background">@drawable/selector_checkbox_green</item>
            <item name="android:button">@null</item>
        </style>

        <!--
            windowNoTitle		没有标题
            windowIsTranslucent	透明
            windowBackground	窗口背景色
            windowAnimationStyle	Dialog进出的显示动画
            windowContentOverlay	是否有覆盖
            backgroundDimEnabled	dialog的背景是否昏暗
        -->
        <!-- 透明Wait对话框 -->
        <style name="DialogNoTitleStyleTransparentBg" parent="android:style/Theme.Dialog">
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowFrame">@null</item>
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:windowIsFloating">true</item>
        </style>

        <!-- 圆角Alert对话框 -->
        <style name="DialogNoTitleRoundCornerStyle" parent="android:style/Theme.Dialog">
            <item name="android:windowFrame">@null</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:windowIsTranslucent">false</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:windowBackground">@drawable/selector_view_block</item>
            <item name="android:backgroundDimEnabled">true</item>
            <item name="android:backgroundDimAmount">0.4</item>
        </style>

        <style name="ware_title">
            <item name="android:textColor">@color/gray</item>
            <item name="android:textSize">20sp</item>
            <item name="android:maxLines">3</item>
        </style>

        <style name="ware_price">
            <item name="android:textColor">@color/crimson</item>
            <item name="android:textSize">22sp</item>
        </style>

</resources>
